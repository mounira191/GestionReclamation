{% extends 'admin/Base.html.twig'%}

{% block title %}Ajouter reclamation {% endblock %}
{% block body %}

<div class="" style='margin-left: 20% ;'>
    <div class="pagetitle">
      <h1>Nouveau reclamation</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Accueil</a></li>
          <li class="breadcrumb-item">type reclamation </li>
          <li class="breadcrumb-item active">Nouvaeu type reclamation</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

   <div class="card">
            <div class="card-body">
              <h5 class="card-title">Ajouter type reclamation</h5>

              <!-- Modifier reclamation -->
                 {{ form_start(form,{'attr': {'novalidate': 'novalidate'}})}}
    <div class="quform-elements">
                    <div class="row mb-3">
                        <div>{{form_label(form.typereclamation,"Typereclamation",{'attr':{'class':'col-sm-2 col-form-label'}})}} <span class="quform-required"> *</span></div>
                        <div class="col-sm-10">
                            {{ form_widget(form.typereclamation,{'attr':{'class':'form-control'}}) }}
                            {{ form_errors(form.typereclamation,{'attr':{'class':'text-danger'}})}}
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div>{{form_label(form.priorite,"priorite",{'attr':{'class':'col-sm-2 col-form-label'}})}} <span class="quform-required"> *</span></div>
                        <div class="col-sm-10">
                            {{ form_widget(form.priorite,{'attr':{'class':'form-select'}}) }}
                            {{ form_errors(form.priorite,{'attr':{'class':'text-danger'}})}}
                        </div>
                    </div>




                    <div class="row mb-3">
                    <div class="col-sm-10">
                        <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
                        
                    </div>
                    </div>

                {{ form_end(form) }}


            </div>
          </div>




</div>










{% endblock %}